library ieee;
use ieee.std_logic_1164.all;
use ieee.numeric_std.all;

entity lab07 is port(
	A,B: in std_logic_vector(3 downto 0);
	sel: in std_logic_vector(1 downto 0);
	aluo: out std_logic_vector(4 downto 0)
	);
end lab07;

architecture arch of lab07 is
    signal calcu: signed(4 downto 0);
begin
    process(A, B, sel)
    begin
        case sel is
            when "00" =>
                calcu <= signed(A) or signed(B);
            when "01" =>
                calcu <= signed(A) and signed(B);
            when "10" =>
                calcu <= signed(A) - signed(B);
            when "11" =>
                calcu <= signed(A) + signed(B);
            when others =>
                calcu <= (others => '0'); -- default value
        end case;
    end process;

	aluo <= std_logic_vector(calcu);
end arch;
			